<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/opacityblackcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="James and 465 others commented"
            android:textStyle="italic"
            android:textSize="12dp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llb"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/view"
                    />
                <TextView
                    android:id="@+id/tv_totalViews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/btn_like"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/heart_fav"
                    />
                <ImageView
                    android:id="@+id/btn_unlike"
                    android:visibility="gone"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/red_heart"
                    />
                <TextView
                    android:id="@+id/tv_total_likes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/arrow_share"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_totalShare"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_btn_comments"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/message"
                    />
                <TextView
                    android:id="@+id/tv_totalComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>