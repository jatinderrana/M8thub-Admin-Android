<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/_5jdp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:id="@+id/messageLayout"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.lifelineconnect.m8thubadmin.Utils.RoundedImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="left|center"
            android:src="@mipmap/avatar"
            android:layout_marginRight="7dp"

            />
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="@dimen/_15jdp"
            android:paddingRight="@dimen/_15jdp"
            android:background="@drawable/rounded_solid_trans_black"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:text="Andy Rubbin"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32 am"
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_comment"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"

                android:paddingRight="@dimen/_4jdp"
                android:maxLines="3"
                android:textColor="@color/white"
                android:layout_marginBottom="2dp"
                android:textSize="@dimen/_14jdp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>