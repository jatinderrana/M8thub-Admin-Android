<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130jdp"
    >

    <!--&gt;-->


    <ImageView
        android:id="@+id/imgView"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/opacityblackcolor"/>
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:gravity="center|bottom"
            android:layout_height="match_parent">

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/red"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="Live Streaming"
                android:textAllCaps="true"


                />

            <!--android:background="@drawable/white_bg_stroke"-->

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content">
                <com.lifelineconnect.m8thubadmin.Utils.RoundedImageView
                    android:layout_margin="1dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/iv_avatar"
                    android:src="@mipmap/avatar"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll"

                android:orientation="vertical"
                android:layout_marginTop="10dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="35dp"-->
                <!--android:orientation="vertical"-->
                <!--&gt;-->
                <TextView
                    android:id="@+id/tv_no_Views"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videos Available"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13jdp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="channel"
                    android:id="@+id/tv_name"
                    android:textStyle="italic"
                    android:gravity="center|left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15jdp"

                    />

                <!---->
                <!--</LinearLayout>-->
                <TextView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:id="@+id/tv_channelDes"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:id="@+id/tv_membership"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    />

                <LinearLayout
                    android:layout_below="@+id/main"
                    android:layout_alignParentBottom="true"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:id="@+id/llb"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@mipmap/view"
                            />
                        <TextView
                            android:id="@+id/tv_totalViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:padding="3dp"
                            android:textColor="@color/white"
                            android:text="0"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".33"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/btn_like"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@mipmap/heart_fav"
                            />
                        <ImageView
                            android:id="@+id/btn_unlike"
                            android:visibility="gone"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@mipmap/red_heart"
                            />
                        <TextView
                            android:id="@+id/tv_totalLikes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:padding="3dp"
                            android:textColor="@color/white"
                            android:text="0"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".33"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@mipmap/arrow_share"
                            />
                        <TextView
                            android:id="@+id/tv_totalShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:padding="3dp"
                            android:textColor="@color/white"
                            android:text="0"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight=".25"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@mipmap/message" />

                        <TextView
                            android:id="@+id/tv_totalComments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:padding="3dp"
                            android:text="12.3 k"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>
